---
interface Props extends astroHTML.JSX.SelectHTMLAttributes {}

const { name = "", value, ...rest } = Astro.props;
const search: string = Astro.url.searchParams.get(name || "") || "";
---

<select
  {...rest}
  name={name}
  value={search}
  class="p-2 rounded transition-all bg-grey-100"
>
</select>
