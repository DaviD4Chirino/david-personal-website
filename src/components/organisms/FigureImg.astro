---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

type Props = HTMLAttributes<"figure"> & {
	src: string | ImageMetadata;
	alt: string;
	caption?: string;
	className?: string;
	imgClassName?: string;
	width?: number;
	height?: number;
};

const {
	src,
	alt,
	caption = alt,
	className = "",
	imgClassName = "",
	width,
	height,
	...props
} = Astro.props;
---

<figure
	{...props}
	class={`
        grid grid-rows-[1fr_auto] gap-2
        justify-center 
        ${className}
        `}
>
	{
		typeof src == "string" ? (
			<img
				src={src}
				alt={alt}
				decoding="async"
				loading="lazy"
				class={`
            p-3 mx-auto 
            max-h-[80vh]
            rounded-xl shadow
            bg-grey-50
            ${imgClassName}`}
				title={caption}
			/>
		) : (
			<Image
				src={src}
				width={width}
				height={height}
				class={`p-3 mx-auto  max-h-[80vh] rounded-xl shadow bg-grey-100 ${imgClassName}`}
				title={caption}
				alt={alt}
			/>
		)
	}
	<figcaption
		class="text-sm leading-3 text-center text-kanit-light text-grey-600"
	>
		{
			typeof src == "string" ? (
				<a href={src} target="_blank">
					{caption}
				</a>
			) : (
				<div>{caption}</div>
			)
		}
	</figcaption>
</figure>
